<%= notice %>

<div class="container">
<h2>User info</h2>

<%= form_for(@user) do |f| %>
  <% if @user.errors.any? %>
    <%= @user.errors.count %>件のerrorが発生しました
      <ul>
        <% @user.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
  <% end %>
    <div>
      <div class="form-group has-icon">
        <strong>Name</strong><%= f.text_field :name %>
    </div>
    <div>
      <div class="form-group has-icon">
        <strong>Image</strong><%= f.attachment_field :profile_image %>
    </div>
     <div>
      <div class="form-group has-icon">
        <strong>Introduction</strong><%= f.text_field :introduction %>
    </div>
    <%= f.submit "Update User" %>
<% end%>