

<div class="container">
	<div class="row">
		<h1>follows</h1>

			<table class="table table-hover table-inverse">
						<tr>
							<th>image</th>
							<th>name</th>
						</tr>
					<tbody>
						<% @users.each do |user| %>
							<tr>
							<td><%= attachment_image_tag user, :profile_image, :fill, 60, 60, class: "img-circle pull-left profile-thumb", fallback: "no_image.jpg" %></td>
  						<td><%= user.name %></td>
  						<td>フォロー数<%= user.active_relationships.count %></td>
  						<td>フォロワー数<%= user.passive_relationships.count %></td>
								<% if current_user != user %>
        					<% if user.followed_by?(current_user) %>
										<td><%=link_to "フォロー済み", user_relationships_path(user.id), method: :delete %></td>
              		<% else %>
              			<td><%=link_to "フォローする", user_relationships_path(user.id), method: :post %></td>
              		<% end %>
            		<% end %>
            	<td><%= link_to "Show", user_path(user.id) %></td>
            </tr>
            <% end %>
					</tbody>
			</table>
	</div>
</div>