<%= notice %>

<div class="container">
        <!-- <p id="notice"></p> -->
  <div class="row">
  	<div class="col-xs-3">
    	<h2>User info</h2>
    		<%= attachment_image_tag @user, :profile_image, :fill, 60, 60, class: "img-circle pull-left profile-thumb", fallback: "no_image.jpg" %>
    		<table class="table">
	      	<tbody>
		      	<tr>
		    	  	<th>name</th>
		    	  	<th><%= current_user.name %></th>
		      	</tr>
		      	<tr>
		    	  	<th>introduction</th>
		    	  	<th><%= current_user.introduction %></th>
		      	</tr>
					</tbody>
				</table>
				<!-- <div class="row"> -->
					<%= link_to "", edit_user_path(current_user), class: 'col-xs-12 btn btn-default glyphicon glyphicon-wrench edit' %>
				<!-- </div> -->

			    <h2>New book</h2>
			  <!-- <div class="field row"> -->
			  	<%= form_for(@book) do |f| %>

    				<h4>タイトル</h4>
    				<%= f.text_field :title %>

    				<h4>本文</h4>
    				<%= f.text_area :body %>
						<%= f.submit "Create book", class: 'btn btn-primary col-xs-12' %>
    			<% end %>
			</div>
			<div class="col-xs-9">
    		<h2>Users</h2>
    		<table class="table table-hover table-inverse">
  					<thead>
    					<tr>
      					<th>image</th>
      					<th>name</th>
      					<th colspan="3"></th>
    					</tr>
  					</thead>
  					<tbody>
  						<% @users.each do |user| %>
  						<tr>
  							<td><%= attachment_image_tag user, :profile_image, :fill, 60, 60, class: "img-circle pull-left profile-thumb", fallback: "no_image.jpg" %></td>
  							<td><%= user.name %></td>
  							<td><%= link_to "Show", user_path(user.id) %></td>
  						</tr>
  						<% end %>
  					</tbody>
					</table>
  		</div>
	</div>
</div>