<%= notice %>

<div class="container">
        <!-- <p id="notice"></p> -->
  <div class="row">
  	<div class="col-xs-3">
    	<h2>User info</h2>
    		<%= attachment_image_tag current_user, :profile_image, :fill, 60, 60, class: "img-circle pull-left profile-thumb", fallback: "no_image.jpg" %>
    		<table class="table">
	      	<tbody>
		      	<tr>
		    	  	<th>name</th>
		    	  	<th><%= current_user.name %></th>
		      	</tr>
		      	<tr>
		    	  	<th>introduction</th>
		    	  	<th><%= current_user.introduction %></th>
		      	</tr>
            <tr>
              <th>follows</th>
              <th>
                <%= link_to follows_user_path(@user) do %>
                <%= @user.active_relationships.count %>
                <% end %>
              </th>
            </tr>
            <tr>
              <th>following</th>
              <th>
                <%= link_to followers_user_path(@user) do %>
                <%= @user.passive_relationships.count %>
                <% end %>
              </th>
            </tr>
					</tbody>
				</table>
					<%= link_to "", edit_user_path(current_user), class: 'col-xs-12 btn btn-default glyphicon glyphicon-wrench edit' %>

			    <h2>New book</h2>
			  	<%= form_for(@book) do |f| %>
			  		<% if@book.errors.any? %>
        			<%= @book.errors.count %>件のerrorが発生しました
        				<% @book.errors.full_messages.each do |message| %>
            			<%= message %>
        			<% end %>
    				<% end %>

    				<h4>Title</h4>
    				<%= f.text_field :title %>

    				<h4>Opinion</h4>
    				<%= f.text_area :body %>
						<%= f.submit "Create book", class: 'btn btn-primary col-xs-12' %>
    			<% end %>
			</div>
			<div class="col-xs-9">
    		<h2>Books</h2>
    			<table class="table table-hover table-inverse">
  					<thead>
    					<tr>
      					<th></th>
      					<th>Title</th>
      					<th>Opinion</th>
      					<th colspan="3"></th>
    					</tr>
  					</thead>
  					<tbody>
    					<% @books.each do |book| %>
    						<tr>
    							<td>
    								<%= attachment_image_tag book.user, :profile_image, :fill, 60, 60, class: "img-circle pull-left profile-thumb", fallback: "no_image.jpg" %>
                  </td>
    							<td>
    								<%= link_to book_path(book.id) do %>
    								<%= book.title %>
                    <% end %>
    							</td>
    							<td>
                    <%= book.body %>
                  </td>
                  <!-- 下記　いいね機能。eachの変数|book|を用いる-->
                  <% if book.favorited_by?(current_user) %>
                    <td>
                      <%= link_to book_favorites_path(book), method: :delete do %>
                      <i class="fa fa-heart" aria-hidden="true" style="color: red;"></i>
                      <%= book.favorites.count %> いいね
                      <% end %>
                    </td>
                    <% else %>
                    <td>
                      <%= link_to book_favorites_path(book), method: :post do %>
                      <i class="fa fa-heart" aria-hidden="true"></i>
                      <%= book.favorites.count %> いいね
                      <% end %>
                    </td>
                    <!-- 下記、コメント -->
                    <td>
                      <%= book.book_comments.count %>件コメント
                    </td>
    							<% end %>
    						</tr>
              <% end %>
  					</tbody>
					</table>
  		</div>
	</div>
</div>